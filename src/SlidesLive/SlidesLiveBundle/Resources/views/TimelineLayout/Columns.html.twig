{# 
  Required values:
  
  array <Presentation/Account> boxes;
#}

<div class="timelineTableOneCol clearfix">
    {% set i = 0 %}
    {% for item in boxes %}
      {% if i is even %}
        {% set boxTemplate = ["SlidesLiveBundle:TimelineLayout:", item.getClass, "Box.html.twig"]|join %}
        {% include boxTemplate with {'item' :item } %}
      {% endif %}
      {% set i = i + 1 %}
    {% endfor %}                                                                                   
  </div>  
  <div class="timelineTableOneCol clearfix">   
    {% set i = 0 %}              
    {% for item in boxes %}
      {% if i is odd %}
        {% set boxTemplate = ['SlidesLiveBundle:TimelineLayout:', item.getClass, 'Box.html.twig']|join %}
        {% include boxTemplate with { 'item' :item } %}
      {% endif %}
      {% set i = i + 1 %}
    {% endfor %}                                                                                                                  
  </div>