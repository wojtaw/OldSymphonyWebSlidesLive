{% extends 'StaticBundle::layout.html.twig' %}

  {% block javascript %}
    <script type="text/javascript" src="{{ asset('bundles/static/javascript/homepageTiles.js') }}">
    </script>      
  {% endblock %}

{% block content %}

  <div class="preloader"></div>
  <div class="websiteBackground"></div>  
  
  <div class="websiteLightBackground firstBlockTop">
    <div class="blockCenterWrapper">
      <h1 class="globalFont left">Helping you<br /> <span class="slidesLiveBlue"> record and spread </span><br />knowledge.</h1>

    
      <a href="http://slideslive.com/data/SL_Recorder/SL_AllPlatforms.zip" id="downloadButtonLink" class="buttonLink" onClick="javascript: _gaq.push(['_trackPageview', '/appDownload/mainButton']);">
        <div class="downloadButton center">
          <div class="downloadButtonText">Download Free App</div>       
        </div>
      </a>
      
      <div class="downloadText"><a href="http://slideslive.com/data/SL_Recorder/SL_Windows.zip">For Windows (XP+)</a> | <a href="http://slideslive.com/data/SL_Recorder/SlidesLive-Mac.dmg">For MacOS (10.6+)</a> | <a href="http://slideslive.com/data/SL_Recorder/SL_Linux.zip">For Linux</a></div>	                                   
    </div> 
  </div>
  
  <div class="websiteLightBackground firstBlockTop">
  	  <div class="showcaseBar clearfix" id="showcaseBar">
        {% for box in presentationBoxes %}
          {% set image = box.presentation.getThumbnail() %}
          {% if image %}
		  <a href="{{ url('accountPresentation', {'accountCanName':box.presentation.account.canonicalName, 'presentationId':box.presentation.id }) }}">
            <div class="showcaseBox tile_1_1">
				<div class="showcaseBoxImage" style="background-image:url({{ asset(image) }});">
				</div>
				<div class="showcaseBoxDescription">
					<div class="showcaseTitle">
					  {% if box.presentation.showSpeaker %}
						{{ box.presentation.listSpeakersNames }}  
					  {% else %}
						{{ box.presentation.title }}  
					  {% endif %}
					</div>	  
				  <a href="{{ url('account', {'accountCanName': box.presentation.account.canonicalName}) }}" class="showcaseChannel slidesLiveBlue">{{ box.presentation.account.name }}</a>											  
				</div>			
			</div>
			</a>			
          {% endif %}
        {% endfor %}							
	  </div>
	  	  
  </div>  
  

  
  <div class="websiteLightBackground">
    <div class="blockCenterWrapper">
      <h1 class="globalFont center"><span class="slidesLiveBlue">How</span> does it work?</h1>   
  
      <div class="howItWorksWrapper clearfix">
        <div class="howItWorksImage"></div>
        <div class="howStepOne">
          <div class="stepsHeadline slidesLiveBlue">1. Start</div>
          <div class="stepsBody">Push the record button<br />and start your presentation</div>                    
        </div>
        <div class="howStepTwo">
          <div class="stepsHeadline slidesLiveBlue">2. Present</div>
          <div class="stepsBody">SlidesLive will record all slides - actually,<br /> all visual elements* - and automatically<br /> sync them with your talk.<br /><br /></div> 
          <div class="stepsBody smallNote">*PDF, PPT, PPTX, ODP, Images, Graphs, Word,<br /> Excel, Web and whole lot more</div>                                       
        </div>
        <div class="howStepThree">
          <div class="stepsHeadline slidesLiveBlue">3. Publish</div>
          <div class="stepsBody">After a simple edit, upload<br /> the presentation to your account.</div>                   
        </div>  
      </div>     
  

    </div>
  </div>
  
  <div class="websiteDarkBackground">
    <div class="blockCenterWrapper">
      <div class="lylesBox center">
        <div class="quotesText">One button recording and a seriously easy editing tool.<br />Publishing a talk doesn't get any easier.</div>
      </div>
    </div>
  </div>  
  
  

{% endblock %}

