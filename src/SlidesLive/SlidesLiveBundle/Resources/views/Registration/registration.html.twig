{% extends 'SlidesLiveBundle::layout.html.twig' %}

{% block title %}Registration{% endblock %}    

{% form_theme form 'SlidesLiveBundle:FormThemes:registration_theme1.html.twig' %}

{% block content %}
<div>
  <form action="{{ path('registration') }}" method='POST' {{ form_enctype(form) }}>
    <table>
    
      <tr class="form_row_error">
        <td></td>
        <td>{{ form_errors(form) }}</td>
      </tr>
         
      {% include 'SlidesLiveBundle:FormFields:textField.html.twig'      with {'input': form.username } %}
      {% include 'SlidesLiveBundle:FormFields:textField.html.twig'      with {'input': form.name } %}
      {% include 'SlidesLiveBundle:FormFields:repeatedField.html.twig'  with {'input': form.password } %}
      {% include 'SlidesLiveBundle:FormFields:textField.html.twig'      with {'input': form.email } %}
      {% include 'SlidesLiveBundle:FormFields:textField.html.twig'      with {'input': form.purpose } %}
      {% include 'SlidesLiveBundle:FormFields:hiddenField.html.twig'    with {'input': form.canonicalName } %}
      
      {{ form_rest(form) }}
      
      <tr class="form_row">
        <td></td>
        <td>
           <input type='submit' value='Confirm' formnovalidate> {# formnovalidate #}
        </td>
      </tr>
    
    </table>
  </form>           

  <p>
    <span class='required' title='Required field.'>*</span>Mandatory fields.  
  </p>
</div>
{% endblock %}
